<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yixuan.yh.product.mapper.ProductSkuMapper">

    <insert id="insertBatch">
        insert into product_sku (sku_id, product_id) values
        <foreach collection="skuIdList" item="skuId" separator=",">
            (#{skuId}, #{productId})
        </foreach>
    </insert>
    <delete id="deleteBatch">
        delete from product_sku where sku_id in
            <foreach collection="skuIdList" item="skuId" open="(" close=")" separator=",">
                #{skuId}
            </foreach>
    </delete>
</mapper>