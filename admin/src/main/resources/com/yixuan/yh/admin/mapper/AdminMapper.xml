<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yixuan.yh.admin.mapper.AdminMapper">

    <select id="selectByCond" resultType="com.yixuan.yh.admin.entity.Admin">
        select id, name, created_time from admin
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null and name != ''">
                name like concat('%', #{name}, '%')
            </if>
            <if test="createdTime != null and createdTime != ''">
                created_time = #{createdTime}
            </if>
        </where>
    </select>
</mapper>